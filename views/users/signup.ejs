<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/svg/triplens.svg" />
    <link rel="stylesheet" href="/stylesheet/signup.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>SignUp</title>
  </head>
  <body>
    <div>
      <div class="row mt-3">
        <div class="col-8 offset-2">
          <div
            style="
              display: flex;
              flex-direction: column;
              align-items: center;
              margin-bottom: 20px;
            "
          >
            <img
              src="/svg/triplens.svg"
              alt="TripLens Logo"
              class="img-fluid"
            />
            <h3
              style="
                background: -webkit-linear-gradient(#f81d58, #4731ee);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
              "
            >
              SignUp on TripLens
            </h3>
          </div>

          <form
            action="/signup"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
            </div>
            <button>Sign up</button>
          </form>
          <p style="margin-top: 25px; display: flex; justify-content: center;color:  rgb(42, 43, 44); font-size: 16px;">
            Already have an account?<a
              href="/login"
              style="text-decoration: none; color: rgb(42, 43, 44); font-size: 16px;"
              >Log in</a
            >
          </p>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      // Bootstrap validation
      (function () {
        "use strict";
        const forms = document.querySelectorAll(".needs-validation");
        Array.from(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
  </body>
</html>
